<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/css/app.css" />
    <link rel="stylesheet" href="/css/json-editor.css" />
  </head>
  <body>
    <h1
      class="is-flex is-justify-content-center is-align-items-center is-size-1 has-text-grey-dark my-3"
    >
      <img src="images/NestJS.svg" width="100" class="mr-2" />Nest Youtube</h1>
    <div id="alerts-container" class="my-3 px-2"></div>
    <div
      class="is-flex is-justify-content-center is-align-items-center"
      x-data="searchComponent()"
    >
      <div id="loading-container" class="control">
        <input
          id="search"
          type="text"
          class="input"
          placeholder="Youtube URL..."
          x-data
          x-model="search"
        />
      </div>
      <button
        x-data
        @click="await getVideoJSON()"
        class="button is-link"
      >Search</button>
    </div>
    <article class="panel is-success p-5 is-hidden">
      <p class="panel-heading">
        JSON
      </p>
      <p class="panel-tabs">
        <a class="is-active">JSON</a>
        <a class="">Video</a>
      </p>
      <div class="panel-block">
        <div id="json-viewer"></div>

      </div>
    </article>
  </body>
  <script defer type="module" src="/js/app.js"></script>
</html>