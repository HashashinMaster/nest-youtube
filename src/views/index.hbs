<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/css/app.css" />
    <link rel="stylesheet" href="/css/json-editor.css" />
  </head>
  <body x-data="searchComponent()">
    <h1
      class="is-flex is-justify-content-center is-align-items-center is-size-1 has-text-grey-dark my-3"
    >
      <img src="images/NestJS.svg" width="100" class="mr-2" />
      Nest Youtube</h1>
    <div id="alerts-container" class="my-3 px-2"></div>
    <div class="is-flex is-justify-content-center is-align-items-center">
      <div id="loading-container" class="control has-icons-left">
        <input
          id="search"
          type="text"
          class="input"
          placeholder="Youtube URL..."
          x-data
          x-model="search"
        />
        <span class="icon is-small is-left" @click="await getVideoJSON()">
          <i class="fa-solid fa-magnifying-glass is-clickable"></i>
        </span>
      </div>
      <button
        x-data
        @click="await getVideoJSON()"
        class="button is-link"
      >Search</button>
    </div>
    <article class="panel is-success p-5 is-hidden" x-data>
      <p class="panel-heading">
        Response
      </p>
      <p class="panel-tabs">
        <a
          @click="toggleResponseView($event,$refs.JSONTab,$refs.VideoTab,$refs.JSONBlock,$refs.VideosBlock)"
          x-ref="JSONTab"
          class="is-active"
        >JSON</a>
        <a
          @click="toggleResponseView($event,$refs.JSONTab,$refs.VideoTab,$refs.JSONBlock,$refs.VideosBlock)"
          x-ref="VideoTab"
          class=""
        >Video</a>
      </p>
      <div class="panel-block" id="json-viewer" x-ref="JSONBlock">
      </div>
      <div class="panel-block" x-ref="VideosBlock">
      </div>
    </article>
  </body>
  <script defer type="module" src="/js/app.js"></script>
</html>